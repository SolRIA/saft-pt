<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SolRIA.SAFT.Desktop"
			 xmlns:semi="https://irihi.tech/semi"
			 x:CompileBindings="True"
			 RequestedThemeVariant="Dark"
             x:Class="SolRIA.SAFT.Desktop.App">

	<Application.Styles>
		<FluentTheme />
		
		<semi:SemiTheme Locale="pt-PT" />
		<StyleInclude Source="avares://Semi.Avalonia.DataGrid/Index.axaml" />

		<!-- icons -->
		<StyleInclude Source="avares://SolRIA.SAFT.Desktop/Assets/Icons.axaml" />

		<!-- common values -->
		<StyleInclude Source="avares://SolRIA.SAFT.Desktop/Assets/CommonValues.axaml" />

		<Style Selector="TextBlock.number">
			<Setter Property="TextAlignment" Value="Right" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="Margin" Value="0,0,5,0" />
			<Setter Property="FontSize" Value="14" />
		</Style>

	</Application.Styles>
</Application>
