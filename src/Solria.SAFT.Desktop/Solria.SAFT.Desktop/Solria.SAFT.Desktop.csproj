<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="Views\CustomersPageView.xaml" />
    <AvaloniaResource Remove="Views\ErrorPageView.xaml" />
    <AvaloniaResource Remove="Views\HeaderPageView.xaml" />
    <AvaloniaResource Remove="Views\MainMenuPageView.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Assets\CommonValues.xaml" />
    <None Remove="Assets\Icons.xaml" />
    <None Remove="Views\CustomersPageView.xaml" />
    <None Remove="Views\ErrorPageView.xaml" />
    <None Remove="Views\HeaderPageView.xaml" />
    <None Remove="Views\MainMenuPageView.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.9" />
    <PackageReference Include="Avalonia.Controls.DataGrid" Version="0.9.9" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.9" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.9" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.7.0" />
  </ItemGroup>
  <ItemGroup>
    <Page Include="Assets\CommonValues.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Include="Assets\Icons.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <EmbeddedResource Include="Views\CustomersPageView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="Views\HeaderPageView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="Views\ErrorPageView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="Views\MainMenuPageView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Views\ErrorPageView - Copy.xaml.cs">
      <DependentUpon>ErrorPageView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\ErrorPageView.xaml.cs">
      <DependentUpon>ErrorPageView.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
